.container
  %h2.section-title Card Edit

  %ul
    - @task.errors.full_messages.each do |message|
      %li= message
  = form_with(model: @task, url: board_task_path(@board,@task), method: 'put', local: true) do |f|
    %div
      = f.label :eyecatch, "eyecatch"
    %div
      = f.file_field :eyecatch
    %div
      = f.label :card_title, "name"
    %div
      = f.text_field :card_title, class: "text"
    %div
      = f.label :card_content, "description"
    %div
      = f.text_area :card_content, class: "text"
    %div
      = f.label :deadline, 'deadline'
    %div
      = f.date_field :deadline,class: 'text'
    %div
      = f.hidden_field :user_id, value: @task_user_id
    = f.submit "変更を保存" ,class: "btn-primary"